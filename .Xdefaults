URxvt.background: #000000
URxvt.foreground: #ffffff
URxvt.scrollBar: false

! scroll up/down one line
URxvt.keysym.M-k: command:\033]720;1\007
URxvt.keysym.M-j: command:\033]721;1\007

URxvt*buffered: true
Urxvt*secondaryScroll:  true    # enable Shift-PageUp/Down in screen
URxvt*saveLines: 5000
URxvt.urlLauncher: firefox

URxvt*font: xft: DejaVu Sans Mono for Powerline:pixelsize=13:antialias=true:hinting=true

! Make blue not so dark
*color4: #268bd2
*color12: #268bd2

URxvt.perl-ext-common: font-size,keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true
